{% extends "::layout-back.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <a class="navbar-brand" href="{{ path('admin_ms_dashboard') }}" style="padding-bottom:0 ;padding-left: 0">
                {% trans %}Dashboard MS{% endtrans %}
            </a>
            <span class=" glyphicon glyphicon-arrow-right" style="top: 18px;    float: left;"></span>
            <a class="{% if app.request.attributes.get('_route') == 'dashboard_editMusique' %}navbar-brand{% endif %}
    " href="{{ path('dashboard_editMusique',{id: musique.id}) }}" style="color: red">
                {% trans %}Modification d'une musique{% endtrans %}</a>
        </div>
    </div>
    <h2><span style="text-decoration:underline; margin-bottom: 20px " > {% trans %}Modifier la musique</span> :{% endtrans %} {{ form.vars.value.title }}</h2>

    <hr>

    <div style="padding-left: 23px; padding-bottom: 23px; padding-right: 23px; padding-top: 23px">
        {{ form_start(form) }}
        {{ form_errors(form) }}


        <div class="col-xs-10">
            <div class="form-group">
                {{ form_label(form.title, "Titre :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.date, "Date :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.date) }}
                    {{ form_errors(form.date) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.lien, "Lien http :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.lien) }}
                    {{ form_errors(form.lien) }}
                </div>
            </div>
            <div class="envoyer">
                {{ form_row(form.enregistrer, {'label': 'Enregistrer'|trans,'attr': {'class': 'btn envoyer_formulaire' }}) }}
            </div>
        </div>

        <div class="col-xs-2">
            <iframe width="100%" height="166" scrolling="no" frameborder="no"
                    src="https://w.soundcloud.com/player/?url={{ musique.lien }}&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false">

            </iframe>
        </div>




        {{ form_end(form) }}
    </div>



{% endblock %}