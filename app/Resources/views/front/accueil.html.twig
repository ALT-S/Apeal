{% extends '::layout.html.twig' %}
{% block title %}{{ parent() }}{% trans %} - Accueil{% endtrans %}{% endblock %}

{% block body %}
    <div class="banner text-center">
        <div class="container">
            <div class="banner-info">
                <h1>{% trans %}APEAL{% endtrans %}</h1>
                <p>{% trans %}Association A Prendre Et A L'essai,<br>
                    regroupant des artistes dans le domaine des arts visuels, des arts plastiques
                    et des arts sonores.{% endtrans %}
                </p>
                <label class="page-scroll"><a class="banner-btn class scroll" href="#feature"><i
                                class="fa fa-angle-double-down fa-4x"></i></a></label>
            </div>
        </div>
    </div>

    <div class="main" id="feature">
        <div class="content_white" style="padding-bottom:26px;">
            <h2>{% trans %}Bienvenue sur notre site!{% endtrans %}</h2>
            <p style="margin-top:19px;">{% trans %}Nous vous présentons les artistes de notre association :{% endtrans %}</p>
        </div>
        <div class="featured_content" >
            <div class="container cMobile">
                <div class="row text-center">
                    <div class="col-md-3 col-sm-12 feature_grid1">
                        <img src="{{ asset('images/pic1.jpg') }}" class="img-responsive MHL" alt=""/>
                        <h3 class="m_1"style="height: 96px;"><a href="{{ path('page_JM') }}">Jean-Marc<br>DURRIEU</a></h3>
                        <p class="m_2">{% trans %}Vidéaste et photographe, <br>Réalise des films documentaires, expérimentaux, reportages, clips pour des compagnies de théatre et groupes de musique...{% endtrans %}</p>
                        <a href="#" class="feature_btn">{% trans %}Voir plus{% endtrans %}</a></div>
                    <div class="col-md-3 col-sm-12 feature_grid1">
                        <img src="{{ asset('images/pic2.jpg') }}" class="img-responsive MHL" alt=""/>
                        <h3 class="m_1"style="height: 96px;"><a href="{{ path('page_MH') }}">Marie-Helene<br>LAVERGNE</a></h3>
                        <p class="m_2">{% trans %}Artiste peintre, <br>Expose régulièrement en France ses toiles qu'elle réalise à la peinture acrylique ou à l'huile et anime des ateliers d'art plastique dans des écoles...{% endtrans %}</p>
                        <a href="#" class="feature_btn">{% trans %}Voir plus{% endtrans %}</a></div>
                    <div class="col-md-3 col-sm-12 feature_grid1">
                        <img src="{{ asset('images/pic6.jpg') }}" class="img-responsive MHL" alt=""/>
                        <h3 class="m_1" style="height: 96px;"><a href="{{ path('page_serge') }}">Monsieur <br> Serge</a></h3>
                        <p class="m_2">{% trans %}Musicien, chanteur, <br>Songwriter electro blues...{% endtrans %}</p>
                        <a href="#" class="feature_btn">{% trans %}Voir plus{% endtrans %}</a></div>
                    <div class="col-md-3 col-sm-12 feature_grid2">
                        <img src="{{ asset('images/pic5.jpg') }}" class="img-responsive MHL" alt=""/>
                        <h3 class="m_1" style="height: 96px;"><a href="{{ path('actualites') }}">{% trans %}Actualités<br>Blog{% endtrans %}</a></h3>
                        <p class="m_2">{% trans %}Retrouvez toutes nos actualités, <br>nos évenements, nos petits moments partagés...{% endtrans %} </p>
                        <a href="#" class="feature_btn">{% trans %}Voir plus{% endtrans %}</a></div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="content_white">
                <h2>{% trans %}Dernières actualités{% endtrans %}</h2>
                <p>{% trans %}Retrouvez les dernières actualités postées du site {% endtrans %}</p>
            </div>
            <div class="testimonial">
                <div class="row testimonial_top">
                    {% if derniereMS is not null %}
                        <div class="col-md-6">
                            <ul class="test_box">

                                <li class="test_desc" style="width:100%">
                                    <h4><a href="{{ path('page_serge') }}">{{ derniereMS.title }}</a></h4>
                                    <iframe width="100%" height="166" scrolling="no" frameborder="no"
                                            src="https://w.soundcloud.com/player/?url={{ derniereMS.lien }}&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false">

                                    </iframe>

                                </li>

                            </ul>
                        </div>
                    {% endif %}
                    {% if derniereBlog is not null %}
                        <div class="col-md-6">
                            <ul class="test_box">
                                <h4><a href="{{ path('actualite', {id: derniereBlog.id}) }}">{{ derniereBlog.title }}</a></h4>
                                <li class="test_img">

                                    <img src="{{ asset('upload/blog/' ~ derniereBlog.file) }}" class="img-responsive" alt=""/>
                                </li>
                                <li class="test_desc">

                                    <p>{{ derniereBlog.content | striptags | truncate(200) }}</p>
                                </li>

                            </ul>
                        </div>
                    {% endif %}


                </div>

                <div class="row testimonial_bottom">

                    {% if derniereJMD is not null %}
                        <div class="col-md-6">
                            <ul class="test_box">
                                <li class="test_img">
                                    {% if derniereJMD.type == 'video' and derniereJMD.yTCode is not null %}
                                        <div class="embed-responsive embed-responsive-16by9">
                                            <iframe class="embed-responsive-item"
                                                    src="https://www.youtube.com/embed/{{ derniereJMD.yTCode }}"></iframe>
                                        </div>
                                    {% elseif derniereJMD.type == 'photo' %}
                                        <img class="img-responsive" src="{{ asset('upload/photos/jmd/' ~ derniereJMD.file) }}"
                                             alt="{{ derniereJMD.title }}"/>
                                    {% endif %}
                                </li>
                                <li class="test_desc">
                                    <h4><a href="#">Jean-Marc Durrieu - {{ derniereJMD.title }}</a></h4>
                                    <p>{{ derniereJMD.description | striptags | truncate(200)  }}</p>
                                </li>

                            </ul>
                        </div>
                    {% endif %}
                    {% if derniereMHL is not null %}
                    <div class="col-md-6">
                        <ul class="test_box">
                            <li class="test_img">
                                <img class="img-responsive" src="{{ asset('upload/photos/mhl/' ~ derniereMHL.file) }}"
                                      alt="{{ derniereMHL.title }}"/>
                            </li>
                            <li class="test_desc">
                                <h4><a href="#">Marie-Helene Lavergne - {{ derniereMHL.title }}</a></h4>
                                <p>Catégorie : {{ derniereMHL.categorie.title | date('d-m-Y') }}</p>
                            </li>

                        </ul>
                    </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

{% endblock %}