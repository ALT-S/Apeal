
{% extends '::layout-back.html.twig' %}

{% set element = form.vars.value %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <a class="navbar-brand" href="{{ path('admin_jmd_dashboard') }}" style="padding-bottom:0 ;padding-left: 0">
                {% trans %}Dashboard JM{% endtrans %}
            </a>
            <span class=" glyphicon glyphicon-arrow-right" style="top: 18px;    float: left;"></span>
            <a class="{% if app.request.attributes.get('_route') == 'admin_jmd_liste_elements_par_categorie' %}navbar-brand{% endif %}
    " href="{{ path('admin_jmd_liste_elements_par_categorie',{id: categorie.id}) }} " style="color: red;     float: left;
    height: 50px;
    padding: 15px 15px;
    font-size: 18px;
    line-height: 20px;">
                {% trans %}Création d'un élément "vidéo"{% endtrans %}</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h2>{% trans %}Création d'un élément "vidéo"{% endtrans %}</h2>
        </div>
    </div>
    <hr>
    <div class="row" style="padding-top: 45px">
        <div class="col-lg-6">

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            <div class="form-group">
                {{ form_label(form.title, "Titre :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description, "Description :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
                <div class="form-group">
                    {{ form_label(form.url, "Vidéo :" ) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                </div>

            {{ form_rest(form) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}