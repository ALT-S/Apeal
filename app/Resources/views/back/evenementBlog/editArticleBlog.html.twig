{% extends "::layout-back.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <a class="navbar-brand" href="{{ path('admin_blog_dashboard') }}" style="padding-bottom:0 ;padding-left: 0">
                {% trans %}Dashboard Blog{% endtrans %}
            </a>
            <span class=" glyphicon glyphicon-arrow-right" style="top: 18px;    float: left;"></span>
            <a class="{% if app.request.attributes.get('_route') == 'dashboard_editArticle' %}navbar-brand{% endif %}
    " href="{{ path('dashboard_editArticle',{id: articleBlog.id})}} " style="color: red">
                {% trans %}Modification d'un évènement {% endtrans %}</a>
        </div>
    </div>
    <h2><span style="text-decoration:underline; margin-bottom: 20px " > {% trans %}Modifier l' évènement</span> :{% endtrans %} {{ form.vars.value.title }}</h2>

    <hr>

    <div style="padding-left: 23px; padding-bottom: 23px; padding-right: 23px; padding-top: 23px">
        {{ form_start(form) }}
        {{ form_errors(form) }}


        <div class="col-xs-10">
            <div class="form-group">
                {{ form_label(form.title, "Titre :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.dateEvenement, "Date :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.dateEvenement) }}
                    {{ form_errors(form.dateEvenement) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.file, "Photo :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                </div>
            </div>

            <div class="form-group" >
                {{ form_label(form.content, "Description :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.content, {'id' : 'summernote'}) }}
                    {{ form_errors(form.content) }}
                </div>
            </div>

            <div class="envoyer">
                {{ form_row(form.enregistrer, {'label': 'Enregistrer'|trans,'attr': {'class': 'btn envoyer_formulaire' }}) }}
            </div>
        </div>

        <div class="col-xs-2">
            <div id="image" class="file" style="margin-bottom:20px;">
                <img src="{{ asset('upload/blog/' ~ form.vars.value.file) }}" width="150" height="150" />
            </div>
        </div>


        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>



{% endblock %}