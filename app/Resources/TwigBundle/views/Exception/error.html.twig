{% extends "layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="aPropos">
            <div class="row">
                <div class="col-xs-offset-3 col-xs-6 " style="margin-bottom: 54px; ">
                    <p class="oups" style="margin-bottom:50px; text-align: center">
                        <img alt="photo" class="photo" src= {{ asset('images/47-error-404-pagebis.jpg') }}>
                    </p>

                    <h5 class="error"
                        style="text-align: center;text-transform: uppercase; color: #777; font-size: 32px">
                        {% trans %} Oups! Une erreur s'est produite{% endtrans %}</h5>

                    <h2 class="errorpage">{% trans %}Erreur "{% endtrans %}{{ status_code }}" </br></h2>

                    <p class="size">{% trans %}Quelque chose est cassé. Veuillez nous envoyer un courriel à
                        jmdurrieu@hotmail.fr
                        et nous faire savoir ce que vous faisiez lorsque cette erreur s'est produite.
                        Nous allons le réparer dès que possible. Désolé pour les inconvénients causés
                        ...{% endtrans %}</p>

                    <p class="color">{% trans %}Nous vous prions de bien vouloir nous en excusez !{% endtrans %}</p>

                </div>
            </div>
        </div>
    </div>

{% endblock %}