<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="{{ asset('css/back/bootstrap.css') }}" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="{{ asset('css/back/font-awesome.css') }}" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="{{ asset('css/back/custom.css') }}" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.4/summernote.css" rel="stylesheet">
</head>
<body>



<div id="wrapper">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="adjust-nav">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('images/logo.png') }}" style="width:60px;" alt="Apeal"/>

                </a>

            </div>

                <span class="logout-spn" >
                  <a href="{{ path('logout') }}" style="color:#fff;">{% trans %}Déconnexion{% endtrans %}</a>

                </span>
        </div>
    </div>
    <!-- /. NAV TOP  -->
    <nav class="navbar-default navbar-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav" id="main-menu">



                <li class="{% if app.request.attributes.get('_route') == 'admin_dashboard' %} active-link{% endif %}">
                    <a href="{{ path('admin_dashboard') }}" ><i class="fa fa-desktop "></i>Dashboard</a>
                </li>


                <li class="{% if app.request.attributes.get('_route') == 'admin_jmd_dashboard' %} active-link{% endif %}">
                    <a href="{{ path('admin_jmd_dashboard') }}"><i class="fa fa-user "></i>Jean-Marc Durrieu</a>
                </li>
                <li class="{% if app.request.attributes.get('_route') == 'admin_mhl_dashboard' %} active-link{% endif %}">
                    <a href="{{ path('admin_mhl_dashboard') }}"><i class="fa fa-user "></i>Marie-Helene Lavergne </a>
                </li>


                <li class="{% if app.request.attributes.get('_route') == 'admin_ms_dashboard' %} active-link{% endif %}">
                    <a href="{{ path('admin_ms_dashboard') }}"><i class="fa fa-user "></i>Monsieur Serge</a>
                </li>
                <li class="{% if app.request.attributes.get('_route') == 'admin_blog_dashboard' %} active-link{% endif %}">
                    <a href="{{ path('admin_blog_dashboard') }}"><i class="fa fa-table"></i><i class="fa fa-edit"></i>Evènement / Blog</a>
                </li>

                <li>
                <a href="{{ path('homepage') }}"><i class="fa fa-qrcode"></i>Voir le site APEAL</a>
                </li>
                <li class="langue langue-bis">
                    {% if app.request.locale != 'en' %}
                        <a href="?_locale=en">
                            <img class="drapeau" alt="Flag" src="{{ asset('images/gb.png') }}"
                                 style="width: 33px;padding-bottom: 7px;" title="English">
                        </a>
                    {% elseif app.request.locale != 'fr' %}
                        <a href="?_locale=fr">
                            <img class="drapeau" alt="Drapeau" src="{{ asset('images/fr.png') }}"
                                 style="width: 33px;padding-bottom: 7px;" title="Français">
                        </a>
                    {% endif %}
                </li>
            </ul>
        </div>

    </nav>
    <!-- /. NAV SIDE  -->


    <div id="page-wrapper" >
        <div id="page-inner">
            {% if app.session.flashBag.has('notice') %}
                <div class="alert alert-success">
                    {% for msg in app.session.flashBag.get('notice') %}
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}

            {% block body %}

            {% endblock %}
        </div>
        <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
</div>

<div class="footer">
    <div class="row">
        <div class="col-lg-12" >
            &copy;  Copyright © 2017 Alt Design by: <a href="http://binarytheme.com" style="color:#fff;" target="_blank">www.binarytheme.com</a>
        </div>
    </div>
</div>


<!-- /. WRAPPER  -->
<!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
<!-- JQUERY SCRIPTS -->
<script src="{{ asset('js/back/jquery-1.10.2.js') }}"></script>
<!-- BOOTSTRAP SCRIPTS -->
<script src="{{ asset('js/back/bootstrap.min.js') }}"></script>
<!-- CUSTOM SCRIPTS -->
<script src="{{ asset('js/back/custom.js') }}"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#summernote').summernote({
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true                  // set focus to editable area after initializing summernote
        });
        /* Code pour changer l'image une fois une nouvelle sélectionnée, ne marche pas encore. Restriction par le navigatuer pour avoir le chemin
         $('#article_file').on('change', function(e) {
         console.log('changed to: ' + this.value );
         $('#image').html('<img src=this.value width="150" height="150" style="float: right; margin-left: 10px; margin-top: 20px;"/>');
         });
         */
    });
</script>
<!-- include summernote css/js-->

<script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.4/summernote.js"></script>

</body>
</html>
