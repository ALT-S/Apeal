{% extends "layout.html.twig" %}
{% block title %}{{ parent() }}{% trans %} - Contact{% endtrans %}{% endblock %}
{% block body %}

    <div class="container formContact testimonial">
    <h2>{% trans %}Contact{% endtrans %}</h2>

        <div class="" style="background-color: #7cc4cc; padding: 40px">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}


            <div class="form-group">
                {{ form_label(form.nom, "Nom :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.nom)}}
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.prenom, "Prénom :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.prenom)}}
                    {{ form_errors(form.prenom) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.email, "Email :" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.email)}}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.contenu, "Votre message:" ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.contenu)}}
                    {{ form_errors(form.contenu) }}
                </div>
            </div>

            <div class="col-xs-12 text-right">
                {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                {{ form_widget(form.envoyer, {'attr': {'class': 'btn envoyer_formulaire'}}) }}
            </div>

            {{ form_rest(form) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
